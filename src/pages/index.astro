  //   }%)`;
  // };
  function parallax() {
    var scrolled = document.documentElement["scrollTop"]; //$(window).scrollTop();
    // $("[data-scroll]").css(
    //   "transform",
    //   "translateY(" + -(scrolled * 0.02) + "px)"
