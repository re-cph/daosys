          <input
            type="email"
            value=""
            name="EMAIL"
            class="bg-transparent border-0 border-b-2 border-white w-full"
            id="mce-EMAIL"
            placeholder="Enter Email"
          />
        </div>
        <div id="mce-responses" class="clear foot">
          <div class="response" id="mce-error-response" style="display:none">
          </div>
          <div class="response" id="mce-success-response" style="display:none">
          </div>
        </div>
        <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
        <div style="position: absolute; left: -5000px;" aria-hidden="true">
          <input
            type="text"
            name="b_6b592252597cac0ee3a62c6eb_73e3258f51"
            tabindex="-1"
            value=""
          />
        </div>
        <div class="optionalParent">
          <div class="flex justify-end mt-4">
            <input
              type="submit"
              value="Subscribe"
              name="subscribe"
              id="mc-embedded-subscribe"
              class="rounded-full p-2 px-6 cursor-pointer bg-blue-dark text-white hover:bg-blue-light hover:text-blue-dark"
            />
