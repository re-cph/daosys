  <!-- Begin Mailchimp Signup Form -->
  <div id="mc_embed_signup" class="mt-8 flex flex-col">
    <form
      action="https://daosys.us14.list-manage.com/subscribe/post?u=6b592252597cac0ee3a62c6eb&amp;id=73e3258f51"
      method="post"
      id="mc-embedded-subscribe-form"
      name="mc-embedded-subscribe-form"
      class="validate"
      target="_blank"
      novalidate
    >
      <div id="mc_embed_signup_scroll">
        <!-- <h2>Subscribe to our mailing list</h2> -->
